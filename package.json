{
  "name": "mertex.md",
  "version": "1.0.0",
  "description": "A JavaScript library for rendering Markdown with LaTeX math (KaTeX) and Mermaid diagrams",
  "main": "dist/mertex.umd.js",
  "module": "dist/mertex.esm.js",
  "browser": "dist/mertex.min.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/mertex.esm.js",
      "require": "./dist/mertex.umd.js",
      "browser": "./dist/mertex.min.js"
    },
    "./src/*": "./src/*"
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "node build.js",
    "test": "node test/unit/run-tests-node.cjs",
    "test:browser": "open test/unit/test-runner.html || xdg-open test/unit/test-runner.html || start test/unit/test-runner.html",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "markdown",
    "katex",
    "mermaid",
    "latex",
    "math",
    "diagrams",
    "streaming",
    "renderer"
  ],
  "author": "Gary Ferguson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GTFerguson/mertex.md.git"
  },
  "bugs": {
    "url": "https://github.com/GTFerguson/mertex.md/issues"
  },
  "homepage": "https://github.com/GTFerguson/mertex.md#readme",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "jsdom": "^27.4.0"
  },
  "peerDependencies": {
    "dompurify": ">=3.0.0",
    "marked": ">=9.0.0"
  },
  "peerDependenciesMeta": {
    "katex": {
      "optional": true
    },
    "mermaid": {
      "optional": true
    },
    "highlight.js": {
      "optional": true
    }
  }
}
